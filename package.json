{
  "name": "@danielgtmn/finom-api-client",
  "version": "0.0.3",
  "description": "Node.js client for the Finom Public API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prepare": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run test",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "publish": "npm publish"
  },
  "keywords": [
    "finom",
    "api",
    "client",
    "invoice",
    "typescript",
    "billing"
  ],
  "author": "Daniel Gietmann",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielgtmn/finom-api-client.git"
  },
  "bugs": {
    "url": "https://github.com/danielgtmn/finom-api-client/issues"
  },
  "homepage": "https://github.com/danielgtmn/finom-api-client#readme",
  "dependencies": {
    "axios": "^1.8.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.27",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.3.0",
    "typescript": "^5.8.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
